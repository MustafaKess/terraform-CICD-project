# TerraTech Infrastructure Configuration
# Simplified for CI/CD Workflow (Assignment 2)

# Project Configuration
project_name = "terratech"
environment  = "dev"

# OpenStack Configuration
external_network = "default"         # Change if your external network has a different name
ssh_key_name     = "mustafke-key"    # Your actual keypair name in Horizon

# Network Configuration (3-Tier Architecture)
web_tier_cidr = "10.0.1.0/24"
app_tier_cidr = "10.0.2.0/24"
db_tier_cidr  = "10.0.3.0/24"

# Virtual Machine Configuration
frontend_vm_count = 1
database_vm_count = 1
vm_flavor         = "gx1.1c1r"
vm_image          = "Debian 13 (Trixie) stable amd64"

# Load Balancer Configuration
enable_load_balancer = false
lb_protocol          = "HTTP"
lb_port              = 80
lb_method            = "ROUND_ROBIN"

# Storage Configuration
enable_persistent_storage = false
persistent_storage_size   = 20
enable_object_storage     = false
storage_container_names   = []

# Application Configuration
web_server_type   = "nginx"
database_type     = "postgresql"
database_name     = "appdb"
database_user     = "appuser"


# Security Configuration
allowed_ssh_cidrs  = ["0.0.0.0/0"]      # Allow SSH from anywhere (for testing only)
allowed_http_cidrs = ["0.0.0.0/0"]
allowed_db_cidrs   = ["10.0.0.0/16"]
